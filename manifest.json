{
  "manifest_version": 3,
  "name": "External Link Catcher",
  "version": "1.0.0",
  "description": "外部アプリからのリンクを指定されたタブグループで開きます",
  
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "background",
    "webNavigation",
    "webRequest"
  ],

  "host_permissions": ["<all_urls>"],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "External Link Catcher Settings"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
